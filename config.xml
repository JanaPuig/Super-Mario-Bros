<!-- Config file for the engine -->
<config>
	<engine>
		<title>Super Mario Bros</title>
		<maxFrameDuration value="16"/>
	</engine>
	<render>
		<vsync value="false"/>
	</render>
	<window>
		<resolution width="1920" height="960" scale="1"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="true"/>
	</window>
	<scene>
		<entities>
			<!-- Player Animations -->
			<player name="mario" x="200" y="200" w="32" h="32" texture_player="Assets/Textures/player.png" gravity="true">
				<animations>
					<idle loop="true" speed="0.1">
						<frame x="0" y="0" w="32" h="32"/>
					</idle>
					<idleL loop="true" speed="0.1">
						<frame x="0" y="32" w="32" h="32"/>
					</idleL>
					<walking loop="true" speed="0.25">
						<frame x="32" y="0" w="32" h="32"/>
						<frame x="64" y="0" w="32" h="32"/>
						<frame x="0" y="0" w="32" h="32"/>
					</walking>
					<walkingL loop="true" speed="0.25">
						<frame x="32" y="32" w="32" h="32"/>
						<frame x="64" y="32" w="32" h="32"/>
						<frame x="0" y="32" w="32" h="32"/>
					</walkingL>
					<jumping loop="false" speed="0.15">
						<frame x="96" y="0" w="32" h="32"/>
						<frame x="128" y="0" w="32" h="32"/>
					</jumping>
					<jumpingL loop="false" speed="0.15">
						<frame x="128" y="32" w="32" h="32"/>
						<frame x="96" y="32" w="32" h="32"/>

					</jumpingL>
					<die loop="false">
						<frame x="160" y="0" w="32" h="32"/>
					</die>
				</animations>
			</player>
			<enemies>
				<!-- Koopa Animations -->
				<enemy_koopa name="koopa" x="400" y="400" w="80" h="92" texture_koopa="Assets/Textures/koopaSprites.png" gravity="true">
					<animations>
						<idlekoopaL loop="true" speed="0.25">
							<frame x="326" y="324" w="62" h="92"/>
							<frame x="240" y="334" w="72" h="72"/>
							<frame x="158" y="340" w="76" h="58"/>
							<frame x="78" y="338" w="76" h="62"/>
							<frame x="2" y="330" w="68" h="78"/>
							<frame x="318" y="434" w="76" h="72"/>
							<frame x="236" y="439" w="80" h="62"/>
							<frame x="160" y="439" w="72" h="64"/>
							<frame x="84" y="431" w="66" h="80"/>
							<frame x="0" y="436" w="72" h="66"/>
						</idlekoopaL>
						<idlekoopaR loop="true" speed="0.25">
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
						</idlekoopaR>
						<walkingkoopaL loop="true" speed="0.25">
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
						</walkingkoopaL>
						<walkingkoopaR loop="true" speed="0.25">
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
							<frame x="" y="" w="" h=""/>
						</walkingkoopaR>
						<deadkoopa texture="deadkoopa.png">
							<frame x="20" y="134" w="64" h="60"/>
						</deadkoopa>
					</animations>
				</enemy_koopa>
				<!-- Goomba Animations -->
				<enemy name="goomba" x="192" y="400" w="32" h="32" texture="Assets/Textures/goomba_walking.png" gravity="true">
					<animations>
						<idle loop="true" speed ="0.1">
							<frame x="0" y="0" w="32" h="32"/>
							<frame x="32" y="0" w="32" h="32"/>
							<frame x="64" y="0" w="32" h="32"/>
						</idle>
						<dead>
							<frame x="0" y="32" w="32" h="32"/>
						</dead>
						
					</animations>
				</enemy>
			</enemies>
		</entities>
	</scene>
</config>