<!-- Config file for the engine -->
<config>
	<engine>
		<title>Super Mario Bros</title>
		<maxFrameDuration value="16"/>
	</engine>
	<render>
		<vsync value="false"/>
	</render>
	<window>
		<resolution width="1920" height="960" scale="1"/>
		<fullscreen value="false"/>
		<borderless value="false"/>
		<resizable value="false"/>
		<fullscreen_window value="true"/>
	</window>
	<scene>
		<entities>
			<!-- Player Animations -->
			<player name="mario" x="100" y="200" w="32" h="32" gravity="true">
				<animations>
					<idle texture="Assets/Textures/player1.png" loop="true" speed="0.1">
						<frame x="0" y="0" w="32" h="32"/>
					</idle>
					<idleL texture="Assets/Textures/playerL.png" loop="true" speed="0.1">
						<frame x="0" y="0" w="32" h="32"/>
					</idleL>
					<walking texture="Assets/Textures/mario_walking.png" loop="true" speed="0.25">
						<frame x="0" y="0" w="32" h="32"/>
						<frame x="32" y="0" w="32" h="32"/>
						<frame x="64" y="0" w="32" h="32"/>
					</walking>
					<walkingL texture="Assets/Textures/mario_walkingL.png" loop="true" speed="0.25">
						<frame x="0" y="0" w="32" h="32"/>
						<frame x="32" y="0" w="32" h="32"/>
						<frame x="64" y="0" w="32" h="32"/>
					</walkingL>
					<jumping texture="Assets/Textures/mario_jumping.png" loop="false" speed="0.15">
						<frame x="0" y="0" w="32" h="32"/>
						<frame x="32" y="0" w="32" h="32"/>
					</jumping>
					<jumpingL texture="Assets/Textures/mario_jumpingL.png" loop="false" speed="0.15">
						<frame x="0" y="0" w="32" h="32"/>
						<frame x="32" y="0" w="32" h="32"/>
					</jumpingL>
					<die texture="Assets/Textures/die.png" loop="false">
						<frame x="0" y="0" w="32" h="32"/>
					</die>
				</animations>
			</player>
			<enemies>
